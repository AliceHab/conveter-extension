{
  "manifest_version": 3,
  "name": "Converter Extension",
  "version": "1.0.0",
  "description": "Convert from one unit to another right on the page",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "tabs", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {
    "16": "images/16x16.png",
    "32": "images/32x32.png"
  }
}
